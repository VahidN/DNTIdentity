@model RegisterViewModel
@inject IPasswordRules PasswordRules
@inject IApplicationSignInManager SignInManager
@{
    ViewData["Title"] = "ثبت نام";
    var externalSchemes = await SignInManager.GetExternalAuthenticationSchemesAsync();
    var returnUrl = ViewContext.HttpContext.Request.Query["returnUrl"].ToString();
}

<div class="card mt-5">
    <div class="card-header d-flex justify-content-between align-items-center">
	    <h5 class="card-title">@ViewData["Title"]</h5>
	    @if (externalSchemes?.Any() == true)
	    {
		    <small class="text-muted">همچنین می‌توانید با شبکه‌های اجتماعی ثبت‌نام کنید</small>
	    }
    </div>
    <div class="card-body">
        <form asp-controller="Register"
              asp-action="Index"
              method="post">
            <partial name="_CustomValidationSummary"/>
            <div class="form-group row">
                <label asp-for="FirstName" class="col-md-2 col-form-label text-md-left"></label>
                <div class="col-md-10">
                    <input dir="rtl" asp-for="FirstName" class="form-control"/>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="LastName" class="col-md-2 col-form-label text-md-left"></label>
                <div class="col-md-10">
                    <input dir="rtl" asp-for="LastName" class="form-control"/>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Username" class="col-md-2 col-form-label text-md-left"></label>
                <div class="col-md-10">
                    <input dir="ltr" asp-for="Username" autocomplete="username" onblur="triggerRemoteValidation()" class="form-control"/>
                    <span asp-validation-for="Username" class="text-danger"></span>
                    <span class="optional-label">(جهت لاگین)</span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Email" class="col-md-2 col-form-label text-md-left"></label>
                <div class="col-md-10">
                    <input dir="ltr" asp-for="Email" onblur="triggerRemoteValidation()" class="form-control"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Password" class="col-md-2 col-form-label text-md-left"></label>
                <div class="col-md-10">
                    <input dir="ltr" asp-for="Password"
                           passwordrules="@PasswordRules.GetPasswordRules()"
                           autocomplete="new-password" class="form-control"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ConfirmPassword" class="col-md-2 col-form-label text-md-left"></label>
                <div class="col-md-10">
                    <input dir="ltr" asp-for="ConfirmPassword" class="form-control"/>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col col-md-2 col-form-label text-md-left">
                    کد امنیتی
                </label>
                <div class="col col-md-10">
                    <dnt-captcha asp-captcha-generator-max="30"
                                 asp-captcha-generator-min="1"
                                 asp-captcha-generator-language="Persian"
                                 asp-captcha-generator-display-mode="SumOfTwoNumbers"
                                 asp-font-name="Tahoma"
                                 asp-font-size="20"
                                 asp-refresh-button-class="fas fa-redo btn-sm"
                                 asp-fore-color="#333333"
                                 asp-back-color="#ccc"
                                 asp-text-box-class="text-box form-control"
                                 asp-text-box-template="<div class='input-group'><span class='input-group-prepend'><span class='input-group-text'><i class='fas fa-lock'></i></span></span>{0}</div>"
                                 asp-validation-message-class="text-danger"/>
                </div>
            </div>
            <div class="form-group row">
                <div class="offset-md-2 col-md-10 d-flex flex-wrap gap-2 align-items-center">
	                <button type="submit" class="btn btn-info col-md-2">ثبت نام</button>
	                @foreach (var p in externalSchemes)
	                {
		                <a class="btn btn-outline-secondary btn-sm"
		                   asp-area="@AreaConstants.IdentityArea"
		                   asp-controller="ExternalLogin"
		                   asp-action="Challenge"
		                   asp-route-provider="@p.Name"
		                   asp-route-returnUrl="@returnUrl">
			                <i class="fas fa-plug"></i>
			                ثبت نام با @p.DisplayName
		                </a>
	                }
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    <script type="text/javascript">
        function triggerRemoteValidation() {
            $('#@nameof(RegisterViewModel.Username)').removeData('previousValue');
            $('form').validate().element('#@nameof(RegisterViewModel.Username)');

            $('#@nameof(RegisterViewModel.Email)').removeData('previousValue');
            $('form').validate().element('#@nameof(RegisterViewModel.Email)');
        }
    </script>
}
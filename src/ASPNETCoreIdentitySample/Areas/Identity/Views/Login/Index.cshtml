@using Microsoft.AspNetCore.Authentication
@model LoginViewModel
@inject IApplicationSignInManager SignInManager
@{
    ViewData["Title"] = "ورود";
    var returnUrl = ViewData["ReturnUrl"] as string;
    var externalSchemes = await SignInManager.GetExternalAuthenticationSchemesAsync();
    var externalError = Context.Request.Query["externalError"].ToString();
}

@if (!string.IsNullOrWhiteSpace(externalError))
{
	<div class="alert alert-danger alert-dismissible fade show mt-4" role="alert">
		<strong>خطای ورود خارجی:</strong>
		@externalError
		<button type="button" class="close" data-dismiss="alert" aria-label="Close">
			<span aria-hidden="true">&times;</span>
		</button>
	</div>
}

<div class="card mt-5">
	<div class="card-header d-flex justify-content-between align-items-center">
		<h5 class="card-title mb-0">@ViewData["Title"]</h5>
		@if (externalSchemes?.Any() == true)
		{
			<small class="text-muted">روش‌های ورود خارجی در دسترس</small>
		}
	</div>
    <div class="card-body">
        <form asp-controller="Login"
              asp-action="Index"
              asp-route-returnurl="@ViewData["ReturnUrl"]"
              method="post"
              autocomplete="off">
            <partial name="_CustomValidationSummary"/>
            <div class="form-group row">
                <label asp-for="Username" class="col-md-2 col-form-label text-md-left"></label>
                <div class="col col-md-10">
                    <div class="input-group">
                        <span class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="fas fa-user"></i>
                            </span>
                        </span>
                        <input asp-for="Username" autocomplete="username" dir="ltr" class="form-control"/>
                    </div>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Password" class="col-md-2 col-form-label text-md-left"></label>
                <div class="col col-md-10">
                    <div class="input-group">
                        <span class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="fas fa-asterisk"></i>
                            </span>
                        </span>
                        <input asp-for="Password" dir="ltr" class="form-control"/>
                    </div>
                    <span asp-validation-for="Password" autocomplete="current-password"
                          autocapitalize="off" class="text-danger">
                    </span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col col-md-2 col-form-label text-md-left">
                    کد امنیتی
                </label>
                <div class="col col-md-10">
                    <dnt-captcha asp-captcha-generator-max="30"
                                 asp-captcha-generator-min="1"
                                 asp-captcha-generator-language="Persian"
                                 asp-captcha-generator-display-mode="SumOfTwoNumbers"
                                 asp-font-name="Tahoma"
                                 asp-font-size="20"
                                 asp-refresh-button-class="fas fa-redo btn-sm"
                                 asp-fore-color="#333333"
                                 asp-back-color="#ccc"
                                 asp-text-box-class="text-box form-control"
                                 asp-text-box-template="<div class='input-group'><span class='input-group-prepend'><span class='input-group-text'><i class='fas fa-lock'></i></span></span>{0}</div>"
                                 asp-validation-message-class="text-danger"/>
                </div>
            </div>
            <div class="form-group row">
                <div class="offset-md-2 col-md-10">
                    <div class="form-check">
                        <label asp-for="RememberMe" class="form-check-label">
                            <input class="form-check-input" asp-for="RememberMe"/>
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group row">
	            <div class="offset-md-2 col-md-10 d-flex flex-wrap gap-2 align-items-center">
		            <button type="submit" class="btn btn-info">ورود</button>

		            @{
			            var authenticationSchemes = externalSchemes as AuthenticationScheme[] ?? externalSchemes.ToArray();
		            }
		            @if (authenticationSchemes?.Any() == true)
		            {
			            <span class="text-muted small">- یا -</span>
			            @foreach (var p in authenticationSchemes)
			            {
				            <a class="btn btn-outline-secondary btn-sm"
				               asp-area="@AreaConstants.IdentityArea"
				               asp-controller="ExternalLogin"
				               asp-action="Challenge"
				               asp-route-provider="@p.Name"
				               asp-route-returnUrl="@returnUrl">
					            <i class="fas fa-plug"></i>
					            ورود با @p.DisplayName
				            </a>
			            }
		            }
	            </div>
            </div>
        </form>
    </div>
    <footer class="card-footer">
        <p>
            <a asp-action="Index" asp-controller="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">ثبت نام</a>
        </p>
        <p>
	        <a asp-action="Index" asp-controller="ForgotPassword">کلمه‌ی عبور خود را فراموش کرده‌اید؟</a>
        </p>
    </footer>
</div>